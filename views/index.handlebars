<img src="assets/burgerlove.jpg" alt="burger" />

<h1>Burger Love!</h1>

<h2 class="want">Burgers I Want</h2>

<ul>
    {{#each burgers_table}}
    {{#unless devoured}}
    <p>
        <span>#{{this.id}} {{this.burger_name}}
            <button type="submit" class="eat-me" data-id="{{this.id}}" data-newstatus="{{true}}">Devour it!</button>
        </span>
    </p>
    {{/unless}}
    {{/each}}
</ul>

<h2 class="ate">Burgers I Ate</h2>

<ul>
    {{#each burgers_table}}
    {{#if devoured}}
    <p>{{this.burger_name}}</p>
    {{/if}}
    {{/each}}
</ul>

<h2 class="add">Add a Burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="burgerName">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
    </div>

    <button type="submit" id="submit">Submit</button>
</form>