<h1>Burger Love!</h1>

<h2>Burgers I Want</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <p>{{this.burger_name}}</p>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers I Ate</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <p>{{this.burger_name}}</p>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>